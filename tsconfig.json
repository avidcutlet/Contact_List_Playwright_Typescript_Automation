{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".", 
    "paths": {
      "@pages/*": ["pages/*"],
      "@config/*": ["config/*"],
      "@utils/*": ["utils/*"],
      "@testData/*": ["test-data/*"],
      "@api/*": ["api/*"],
      "@reusableScripts/*": ["tests/reusable-scripts/*"],
      "@ui/*": ["tests/ui/*"],
      "@hooks/*": ["hooks/*"],
    }
  },
  "include": [
    "pages/**/*",
    "config/**/*",
    "utils/**/*",
    "tests/**/*",
    "test-data/**/*",
    "hooks/**/*",
    "api/*",
    "global-setup.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}
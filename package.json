{
  "name": "contact_list_playwright_typescript_automation",
  "version": "1.0.0",
  "description": "This is an automation using Playwright Typescript on Contact List Website",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "report": "playwright show-report",
    "test:chromium:new-contact-ui": "playwright test /ui/account-setup-new-contact-ui.spec.ts --project=chromium",
    "test:chromium:create-user-account-api": "playwright test /api/create-user-account-api.spec.ts --project=chromium",
    "test:chromium:tag-ui": "playwright test -g \"@UI\" --project=chromium",
    "test:chromium:tag-api": "playwright test -g \"@API\" --project=chromium",
    "test:chromium:tag-all": "playwright test -g \"@ALL\" --project=chromium",
    "test:browser-all:tag-all": "playwright test -g \"@ALL\"",
    "generate:allure": "allure generate reports/allure-results --single-file --output reports/allure-reports --clean"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^9.8.0",
    "@playwright/test": "^1.53.1",
    "@types/axios": "^0.9.36",
    "@types/date-fns": "^2.5.3",
    "@types/dotenv": "^6.1.1",
    "@types/loglevel": "^1.5.4",
    "@types/node": "^24.0.3",
    "allure-playwright": "^3.3.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "allure-js-commons": "^3.3.0",
    "axios": "^1.10.0",
    "date-fns": "^4.1.0",
    "loglevel": "^1.9.2"
  }
}

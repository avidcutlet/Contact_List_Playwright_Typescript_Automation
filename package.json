{
  "name": "contact_list_playwright_typescript_automation",
  "version": "1.0.0",
  "description": "This is an automation using Playwright Typescript on Contact List Website",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "report": "playwright show-report",
    "test:dev": "cross-env NODE_ENV=dev TS_NODE_PROJECT=./tsconfig.json playwright test",
    "test:prod": "cross-env NODE_ENV=prod TS_NODE_PROJECT=./tsconfig.json playwright test",
    "test:staging": "cross-env NODE_ENV=staging TS_NODE_PROJECT=./tsconfig.json playwright test",
    "test-ui:staging": "cross-env NODE_ENV=staging TS_NODE_PROJECT=./tsconfig.json playwright test --project=chromium --ui",
    "test:staging:chromium": "cross-env TEST_ENV=staging TS_NODE_PROJECT=./tsconfig.json playwright test --project=chromium",
    "test:staging:firefox": "cross-env NODE_ENV=staging TS_NODE_PROJECT=./tsconfig.json playwright test --project=firefox",
    "test:staging:webkit": "cross-env NODE_ENV=staging TS_NODE_PROJECT=./tsconfig.json playwright test --project=webkit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^9.8.0",
    "@playwright/test": "^1.53.1",
    "@types/dotenv": "^6.1.1",
    "@types/node": "^24.0.3",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
}
